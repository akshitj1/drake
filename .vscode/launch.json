    "version": "0.2.0",
    "configurations": [
        //https: //shanee.io/blog/2019/05/28/bazel-with-visual-studio-code/
        //https://github.com/bazelbuild/bazel/issues/6327
        {
            "name": "bazel debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-out/darwin-dbg/bin/${relativeFileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",//"/bazel-out/darwin-dbg/bin/${relativeFileDirname}/${fileBasenameNoExtension}.runfiles/drake",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            //"preLaunchTask": "g++ build active file"
        },
        {
            "name": "g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "bazel-bin/${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "g++ build active file"
        }
    ]
}